{
    "compilerOptions": {
        "types": [
            "mocha",
            "chai",
            "node"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ],
        "lib": [
            "es2020"
        ],
        "module": "commonjs",
        "target": "es6",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@coral-xyz/anchor": [
                "./node_modules/@coral-xyz/anchor"
            ]
        }
    },
    "include": [
        "tests/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}